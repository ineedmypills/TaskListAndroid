<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="32dp" />
            <gradient
                android:startColor="#93000a"
                android:endColor="#93000a"
                android:angle="45" />
            <stroke android:width="2dp" android:color="#ba1a1a" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="32dp" />
            <gradient
                android:startColor="#ffdad6"
                android:endColor="#ffdad6"
                android:angle="45" />
            <stroke android:width="2dp" android:color="#ba1a1a" />
        </shape>
    </item>
</selector>